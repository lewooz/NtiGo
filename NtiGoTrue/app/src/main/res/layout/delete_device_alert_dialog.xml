<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/dialog_background">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/iptal"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:id="@+id/bilgi_kontrol_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure that you want to delete this device?"
        android:textColor="@color/beyaz"
        android:gravity="center"
        android:fontFamily="@font/open_sans_extrabold"
        android:layout_marginTop="70dp"
        />
    <Button
        android:id="@+id/kabul_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:textColor="@color/beyaz"
        android:layout_marginBottom="5dp"
        android:background="@drawable/kabul_buton"
        android:layout_below="@id/bilgi_kontrol_text"/>
    <Button
        android:id="@+id/red_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/beyaz"
        android:background="@drawable/red_buton"
        android:text="NO"
        android:layout_below="@id/bilgi_kontrol_text"/>





</RelativeLayout>